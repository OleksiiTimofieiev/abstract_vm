{
	"editor.tokenColorCustomizations": {
		"comments":"#d4922f"
	},
	"editor.showFoldingControls": "always",
	"editor.folding": true,
	"todohighlight.toggleURI": false,
    "files.autoSave": "afterDelay",
	"editor.insertSpaces": false,
	"editor.detectIndentation": false,
	"editor.tabSize": 4,
	"editor.minimap.enabled": false,
	"workbench.iconTheme": "vscode-icons",
	"todohighlight.include": 
	[
		"**/*.js",
		"**/*.jsx",
		"**/*.ts",
		"**/*.tsx",
		"**/*.html",
		"**/*.php",
		"**/*.css",
		"**/*.scss",
		"**/*.cpp",
		"**/*.hpp",
		"**/*.h",
		"**/*.c"
	],
	"files.associations": {
		"__bit_reference": "cpp",
		"__string": "cpp",
		"algorithm": "cpp",
		"string": "cpp",
		"string_view": "cpp",
		"typeinfo": "cpp",
		"vector": "cpp",
		"deque": "cpp",
		"list": "cpp",
		"exception": "cpp",
		"__config": "cpp",
		"__nullptr": "cpp",
		"initializer_list": "cpp",
		"new": "cpp",
		"stdexcept": "cpp",
		"__split_buffer": "cpp",
		"array": "cpp",
		"bitset": "cpp",
		"iterator": "cpp",
		"regex": "cpp",
		"__functional_base": "cpp",
		"atomic": "cpp",
		"chrono": "cpp",
		"functional": "cpp",
		"limits": "cpp",
		"locale": "cpp",
		"memory": "cpp",
		"ratio": "cpp",
		"system_error": "cpp",
		"tuple": "cpp",
		"type_traits": "cpp",
		"__locale": "cpp",
		"ios": "cpp",
		"utility": "cpp",
		"sstream": "cpp"
	}
}